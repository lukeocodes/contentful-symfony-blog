{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <main class="col col-md-6 offset-md-3">
        <nav aria-label="breadcrumb" role="navigation" class="mt-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('post_index') }}">List</a></li>
            <li class="breadcrumb-item active" aria-current="page">New post</li>
          </ol>
        </nav>
        <div class="card mt-2">
          <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary btn-lg btn-block">Create</button>
                <a href="{{ path('post_index') }}" class="btn btn-lg btn-block btn-outline-primary">Cancel</a>
            {{ form_end(form) }}
          </div>
        </div>
    </main>
{% endblock %}
