{% extends 'base.html.twig' %}

{% block body %}
    <main class="col col-md-6 offset-md-3">
        <nav aria-label="breadcrumb" role="navigation" class="mt-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('post_index') }}">List</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ post.title }}</li>
          </ol>
        </nav>
        <div class="card mt-2">
          <div class="card-body">
            <div itemid="http://techcrunch.com/2015/03/08/apple-watch-event-live-blog" itemscope itemtype="http://schema.org/LiveBlogPosting">
              <div itemprop="about" itemscope itemtype="http://schema.org/Event">
                <time itemprop="startDate" datetime="2015-03-09T13:00:00-07:00" />
                <meta itemprop="name" content="{{ post.title }}" />
              </div>
              <time itemprop="coverageStartTime" content="2015-03-09T11:30:00-07:00" />
              <time itemprop="coverageEndTime" content="2015-03-09T16:00:00-07:00" />
              <h1 itemprop="headline">{{ post.title }}</h1>
              {{ post.body|markdown }}
            </div>
            <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-primary btn-lg btn-block">Edit</a>
            <a href="{{ path('post_delete', { 'id': post.id }) }}" class="btn btn-danger btn-lg btn-block">Delete</a>
            <a href="{{ path('post_index') }}" class="btn btn-lg btn-block btn-outline-primary">Cancel</a>
          </div>
        </div>
    </main>
{% endblock %}
