{% extends 'base.html.twig' %}

{% form_theme edit_form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <main class="col col-md-6 offset-md-3">
        <nav aria-label="breadcrumb" role="navigation" class="mt-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('post_index') }}">List</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit: {{ post.title }}</li>
          </ol>
        </nav>
        <div class="card mt-2">
          <div class="card-body">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
                <a href="{{ path('post_delete', { 'id': post.id }) }}" class="btn btn-danger btn-lg btn-block">Delete</a>
                <a href="{{ path('post_index') }}" class="btn btn-lg btn-block btn-outline-primary">Cancel</a>
            {{ form_end(edit_form) }}
          </div>
        </div>
    </main>
    
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<style>
/* Move down content because we have a fixed navbar that is 3.5rem tall */
.navbar-light {
  background-color: #e3f2fd;
}
</style>
{% endblock %}